<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Base Mech Gun -->
	<ThingDef Name="ATR_BaseMechGun" ParentName="BaseGun" Abstract="True">
        <techLevel>Ultra</techLevel>
        <relicChance>0</relicChance>
        <tradeability>None</tradeability>
        <smeltable>false</smeltable>
        <thingCategories>
            <li>ATR_WeaponsMech</li>
        </thingCategories>
        <useHitPoints>false</useHitPoints>
		<statBases>
            <MarketValue>4000</MarketValue>
			<Flammability>0</Flammability>
			<DeteriorationRate>0</DeteriorationRate>
			<Beauty>-6</Beauty>
			<SellPriceFactor>0.20</SellPriceFactor>
		</statBases>
        <weaponTags>
            <li>ATR_MechWeapon</li>
        </weaponTags>
	</ThingDef>

    <!-- Rotary Autocannon -->
	<ThingDef ParentName="BaseBullet">
        <defName>ATR_AutocannonShell</defName>
        <label>Autocannon shell</label>
        <graphicData>
            <texPath>Things/Projectile/ShellHighExplosive</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
        </graphicData>
        <projectile>
            <damageDef>Bullet</damageDef>
            <damageAmountBase>40</damageAmountBase>
            <speed>110</speed>
            <stoppingPower>4.5</stoppingPower>
        </projectile>
    </ThingDef>

    <ThingDef ParentName="ATR_BaseMechGun">
        <defName>ATR_RotaryAutocannon</defName>
        <label>Rotary Autocannon</label>
        <description>This massive weapon, larger than entire humans, is designed to bring even the largest opponents down under a barrage of direct-fire artillery shells. Rotating barrels integrated with a high efficiency autoloading magazine ensure steady rate of lethal fire. \n\nWeapons like this, mountable only on massive weapons of war, raise the question: Was such weaponry invented to defeat mechs or were mechs invented in order to wield it?</description>
        <graphicData>
            <texPath>Things/Items/Weapons/RotaryAutocannon</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>3</drawSize>
        </graphicData>
        <statBases>
            <Mass>42</Mass>
            <AccuracyTouch>0.5</AccuracyTouch>
            <AccuracyShort>0.65</AccuracyShort>
            <AccuracyMedium>0.70</AccuracyMedium>
            <AccuracyLong>0.5</AccuracyLong>
            <RangedWeapon_Cooldown>0.5</RangedWeapon_Cooldown>
        </statBases>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>ATR_AutocannonShell</defaultProjectile>
                <warmupTime>1</warmupTime>
                <range>30.9</range>
                <ticksBetweenBurstShots>25</ticksBetweenBurstShots>
                <burstShotCount>2</burstShotCount>
                <soundCast>ATR_AutocannonBlast</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>18</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Poke</li>
                </capacities>
                <power>40</power>
                <cooldownTime>2.1</cooldownTime>
            </li>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Demolish</li>
                </capacities>
                <power>45</power>
                <cooldownTime>2.2</cooldownTime>
            </li>
            <li>
                <label>grip</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>25</power>
                <cooldownTime>2.5</cooldownTime>
            </li>
        </tools>
    </ThingDef>


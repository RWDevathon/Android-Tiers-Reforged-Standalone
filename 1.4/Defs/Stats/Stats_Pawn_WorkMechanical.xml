            </li>
            <li>
                <capacity>Manipulation</capacity>
                <weight>1</weight>
            </li>
        </capacityFactors>
        <scenarioRandomizable>true</scenarioRandomizable>
        <displayPriorityInCategory>4640</displayPriorityInCategory>
    </StatDef>

</Defs>
<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Attached motes for hediffs -->

    <ThingDef Name="ATR_AttachedHediffMoteBase" ParentName="MoteBase" Abstract="True">
        <thingClass>MoteAttached</thingClass>
        <altitudeLayer>MoteOverhead</altitudeLayer>
        <mote>
            <solidTime>9999</solidTime>
            <needsMaintenance>true</needsMaintenance>
        </mote>
    </ThingDef>

    <ThingDef ParentName="ATR_AttachedHediffMoteBase">
        <defName>ATR_MindOperationAttachedMote</defName>
        <graphicData>
            <texPath>UI/Avatars/MindOperation</texPath>
            <renderInstanced>true</renderInstanced>
        </graphicData>
    </ThingDef>

    <ThingDef ParentName="ATR_AttachedHediffMoteBase">
        <defName>ATR_SurrogateAttachedMote</defName>
        <graphicData>
            <texPath>UI/Avatars/SkyMindNode</texPath>
            <renderInstanced>true</renderInstanced>
        </graphicData>
    </ThingDef>

</Defs>
                </filter>
                <count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
                <li>ComponentIndustrial</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>ATR_MechanicalLeg</li>
		</appliedOnFixedBodyParts>
		<addsHediff>ATR_MakeshiftMechLeg</addsHediff>
	</RecipeDef>

